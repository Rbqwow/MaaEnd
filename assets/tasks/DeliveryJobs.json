{
    "task": [
        {
            "name": "DeliveryJobs",
            "label": "$task.DeliveryJobs.label",
            "entry": "DeliveryJobsMain",
            "description": "$task.DeliveryJobs.description",
            "option": [
                "FourthValley",
                "Wuling"
            ],
            "controller": [
                "Win32",
                "Win32-Window",
                "Win32-Front"
            ]
        }
    ],
    "option": {
        "FourthValley": {
            "type": "switch",
            "label": "$common.in-game.region.FourthValley",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DeliveryJobsFourthValley": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DeliveryJobsFourthValley": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "Wuling": {
            "type": "switch",
            "label": "$common.in-game.region.WuLing",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DeliveryJobsWuling": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DeliveryJobsWuling": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}
